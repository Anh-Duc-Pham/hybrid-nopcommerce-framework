<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="NopCommerce Automation Testing">
    <listeners>
        <listener class-name="commons.MethodListener"/>
        <listener class-name="reportConfigs.ExtentTestListener"/>
    </listeners>

    <test name="Run on Chrome">
        <parameter name="browser" value="chrome_headless"/>
        <classes>
            <class name="com.nopcommerce.users.Lever_17_Extent_V5" />
        </classes>
    </test>
    <test name="Run on Edge">
        <parameter name="browser" value="edge_headless"/>
        <classes>
            <class name="com.nopcommerce.users.Lever_17_Extent_V5" />
        </classes>
    </test>
    <test name="Run on Firefox">
        <parameter name="browser" value="firefox_headless"/>
        <classes>
            <class name="com.nopcommerce.users.Lever_17_Extent_V5" />
        </classes>
    </test>


</suite>